RewriteEngine On

# 1. Redirect /index.php to / (Root)
RewriteCond %{THE_REQUEST} ^.*/index\.php 
RewriteRule ^(.*)index.php$ /$1 [R=301,L]

# 2. Remove .php extension from URL (Internal rewrite)
# This allows users to visit /trash and the server serves /trash.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# 3. Force external redirect to remove .php from the URL bar
# MODIFICATION HERE: Added the line below to prevent this redirect on POST requests
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]